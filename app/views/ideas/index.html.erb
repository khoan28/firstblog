<p id="notice"><%= notice %></p>

<h1>Agent Stats tgz files</h1>

<table>
  <thead>
    <tr>
      <th>Case</th>
      <th>Description</th>
      <th>Path Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
        <td><%= link_to 'Show', idea, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to edit_idea_path(idea), class: 'btn btn-default btn-xs' do %>
          <i class="glyphicon glyphicon-edit"></i> Edit
          <% end %>
        </td>
        <td><%= link_to idea, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' do %>
          <i class="glyphicon glyphicon-trash"></i> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_idea_path, class: 'btn btn-default' do %>
  <i class="glyphicon glyphicon-upload"></i> Upload files
<% end %>

